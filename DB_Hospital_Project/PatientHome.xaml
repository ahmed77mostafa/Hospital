<Page x:Class="DB_Hospital_Project.PatientLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DB_Hospital_Project"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PatientHome">

    <Grid Background="White">
        <Label Content="Patient Home" FontSize="30" Foreground="Black" Margin="0,0,590,388" />
        <Label Content="Doctor Name" FontSize="20" HorizontalAlignment="Center" Margin="0,50,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="doc_textbox" HorizontalAlignment="Center" Margin="0,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="181" Height="34" />
        <DataGrid x:Name="doc_DG" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="162,225,162,43"/>
        <Button x:Name="doc_search" Content="Search" FontSize="19" HorizontalAlignment="Center" Margin="0,158,0,0" VerticalAlignment="Top" Height="31" Width="94" Click="doc_search_Click"/>
    </Grid>
</Page>
